{
	"name": "ignite",
	"version": "0.0.1",
	"description": "Repository with al content developed by me in Ignite ",
	"private": true,
	"author": "Josue Placido <josueplacidodasilveirajunior@hotmail.com>",
	"license": "MIT",
	"scripts": {
		"postinstall": "cd ./packages/mobile && expo-yarn-workspaces postinstall",
		"commit": "git-cz",
		"start-app": "yarn workspace @ignite/app start"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
		}
	},
	"lint-staged": {
		"*.ts,*.tsx": [
			"eslint --fix",
			"cross-env CI=true yarn test --bail --findRelatedTests",
			"git add"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@ignite/eslint-config": "*",
		"commitizen": "^4.2.1",
		"cross-env": "^7.0.2",
		"eslint-plugin-import-helpers": "^1.1.0",
		"husky": "^6.0.0",
		"lint-staged": "^10.4.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
