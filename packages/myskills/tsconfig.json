{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["ES6"],
		"moduleResolution": "Node",
		"noEmit": true,
		"strict": true,
		"target": "esnext"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "metro.config.js", "babel.config.js"]
}